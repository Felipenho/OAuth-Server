# Configurações de Segurança
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_ISSUER=server-auth
JWT_AUDIENCE=server-mcp

# Configurações do Banco de Dados PostgreSQL
DATABASE_URL=postgresql://oauth_user:oauth_password@localhost:5432/oauth_db
# Formato: postgresql://username:password@host:port/database_name
# Para desenvolvimento local, ajuste o usuário, senha e nome do banco

# Configurações da Aplicação
APP_NAME=OAuth2 Server
APP_VERSION=1.0.0
DEBUG=True

# CORS - Adicione as origens do seu frontend aqui
# ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Rate Limiting (requisições por minuto por IP)
RATE_LIMIT_PER_MINUTE=60
